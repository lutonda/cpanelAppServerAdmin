{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <h1>Applications list</h1>
        </div>
        <div class="col-md-6 text-right">
            <a class="btn btn-primary" href="{{ path('application_new') }}">Create a new application</a>
        </div>
    </div>
    <table class="datatable">
        <thead>
            <tr>
                <th>Name</th>
                <th>Client</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for application in applications %}
            <tr>
                <td>{{ application.name }}</td>
                <td>{{ application.client.name }}</td>
                <td>{% if application.isActive %}<i class="fa fa-check" style="color: #0abb87"></i>{% else %}<i class="fa fa-times" style="color: #900"></i>{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('application_show', { 'id': application.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
